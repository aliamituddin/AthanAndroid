<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/moon_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/athan_title"
        android:layout_marginTop="21dp"
        android:contentDescription="moon"
        android:src="@drawable/moon"
        app:srcCompat="@drawable/moon"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/prayer_timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_pager_fragment"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="00:12:40s"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/next_prayer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prayer_timer_text"
        android:layout_alignLeft="@+id/prayer_timer_text"
        android:layout_alignStart="@+id/prayer_timer_text"
        android:fontFamily="sans-serif"
        android:text="Next Prayer"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/moon_icon"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/swipe_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pager_fragment"
        android:layout_centerHorizontal="true"
        android:src="@drawable/swipe_marker" />

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"/>

</RelativeLayout>
