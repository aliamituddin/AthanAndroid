<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gallopdevs.athanhelper.clock.TimerActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/athan"
        android:id="@+id/athan_title"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/athan_title"
        android:layout_marginTop="21dp"
        android:contentDescription="moon"
        android:src="@drawable/moon"
        app:srcCompat="@drawable/moon"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/prayerTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:12:40s"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/viewPager"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"/>

    <TextView
        android:id="@+id/nextPrayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Next Prayer"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_above="@+id/prayerTimer"
        android:layout_alignLeft="@+id/prayerTimer"
        android:layout_alignStart="@+id/prayerTimer"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_marker"
        android:src="@drawable/swipe_marker"
        android:layout_above="@id/sliding_tabs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>
    
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/sliding_tabs"/>

</RelativeLayout>
