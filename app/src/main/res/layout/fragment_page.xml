<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.excursion.athanhelper.PageFragment">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dayTextView"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:id="@+id/gridLayout"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dawnTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:text="Dawn"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/dawnTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="center"
            android:text="5:45am"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/middayTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="Mid-day"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/middayTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="12:20pm"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/afternoonTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="center"
            android:text="Afternoon"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/afternoonTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="center"
            android:text="3:37pm"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/sunsetTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="Sunset"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/sunsetTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="6:07pm"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/nightTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="4"
            android:gravity="center"
            android:text="Night"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/nightTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="4"
            android:gravity="center"
            android:text="7:07pm"
            android:textAlignment="center"
            android:textSize="24sp"/>
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Monday 03/17"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
