<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.excursion.athanhelper.MainActivity">

    <GridLayout
        android:layout_width="344dp"
        android:layout_height="260dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="237dp"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:id="@+id/dawnTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:text="Dawn"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/dawnTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="center"
            android:text="5:45am"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/middayTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="Mid-day"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/middayTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="12:20pm"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/afternoonTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="center"
            android:text="Afternoon"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/afternoonTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="center"
            android:text="3:37pm"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/sunsetTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="Sunset"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/sunsetTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="6:07pm"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/nightTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="4"
            android:gravity="center"
            android:text="Night"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/nightTimeTextView"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="4"
            android:gravity="center"
            android:text="7:07pm"
            android:textAlignment="center"
            android:textSize="24sp"/>
    </GridLayout>

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday 03/17"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="220dp"/>

    <TextClock
        android:id="@+id/prayerClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:12:44s"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="77dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="121dp"
        app:srcCompat="@drawable/crescent"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="31dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Prayer"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="55dp"/>
</android.support.constraint.ConstraintLayout>
