<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid
                android:color="@color/colorPrimaryDark"/>
            <stroke
                android:color="@color/colorPrimaryDark"
                android:width="1dp"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="300dp"
                android:height="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorPrimary"/>
            <stroke
                android:color="@color/colorPrimaryDark"
                android:width="1dp"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="300dp"
                android:height="30dp"/>
        </shape>
    </item>
</selector>
