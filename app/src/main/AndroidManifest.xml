<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gallopdevs.athanhelper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/moon_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gallopdevs.athanhelper.clock.TimerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.gallopdevs.athanhelper.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.gallopdevs.athanhelper.clock.TimerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingsTheme">>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gallopdevs.athanhelper.clock.TimerActivity"/>
        </activity>
    </application>

</manifest>